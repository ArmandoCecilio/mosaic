{
  "compilerOptions": {
    "module": "es2015",
    "allowJs": true,
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": ".",
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules", "*/__tests__/*", "**/dist/**/*"]
}
