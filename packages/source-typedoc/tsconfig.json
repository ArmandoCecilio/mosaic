{
  "compilerOptions": {
    "module": "es2015",
    "allowJs": false,
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules", "*/__tests__/*", "**/dist/**/*"]
}
